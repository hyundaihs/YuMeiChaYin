<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/fragment_yhq_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/fragment_yhq_item_num_bg"
            android:padding="30dp"
            android:textColor="@android:color/white"
            android:textSize="50sp" />


        <TextView
            android:id="@+id/fragment_yhq_item_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="代金券"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/fragment_yhq_item_2"
            app:layout_constraintLeft_toRightOf="@+id/fragment_yhq_item_price"
            app:layout_constraintTop_toTopOf="@+id/fragment_yhq_item_price"
            app:layout_constraintVertical_chainStyle="spread" />

        <TextView
            android:id="@+id/fragment_yhq_item_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="使用优惠券购买商品不能退货"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/fragment_yhq_item_3"
            app:layout_constraintLeft_toLeftOf="@+id/fragment_yhq_item_1"
            app:layout_constraintTop_toBottomOf="@+id/fragment_yhq_item_1" />

        <TextView
            android:id="@+id/fragment_yhq_item_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="一件商品扣除一张代金券"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/fragment_yhq_item_4"
            app:layout_constraintLeft_toLeftOf="@+id/fragment_yhq_item_1"
            app:layout_constraintTop_toBottomOf="@+id/fragment_yhq_item_2" />

        <TextView
            android:id="@+id/fragment_yhq_item_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="仅限尚品商城使用"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/fragment_yhq_item_price"
            app:layout_constraintLeft_toLeftOf="@+id/fragment_yhq_item_1"
            app:layout_constraintTop_toBottomOf="@+id/fragment_yhq_item_3" />

        <ImageView
            android:id="@+id/fragment_yhq_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/y"
            app:layout_constraintBottom_toBottomOf="@id/fragment_yhq_item_1"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="10dp"
            app:layout_constraintTop_toTopOf="@+id/fragment_yhq_item_1" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>