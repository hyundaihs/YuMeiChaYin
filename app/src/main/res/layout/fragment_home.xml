<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/fragment_home_toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/fragment_home_toolbar_title"
            style="@style/app_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/title_home" />
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_home_toolbar">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <com.youth.banner.Banner xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/fragment_home_banner"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="2:1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

            <TextView
                android:id="@+id/fragment_home_upgrade_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/fragment_content_bg"
                android:padding="10dp"
                android:text="@string/upgrade_text"
                android:textColor="@android:color/black"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fragment_home_banner" />

            <android.support.constraint.Guideline
                android:id="@+id/fragment_home_guideline_1_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.3333333" />

            <android.support.constraint.Guideline
                android:id="@+id/fragment_home_guideline_2_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.6666666" />

            <android.support.v7.widget.CardView
                android:id="@+id/fragment_home_upgrade_card1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                app:cardElevation="@null"
                app:contentPadding="2dp"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/fragment_home_guideline_1_3"
                app:layout_constraintTop_toBottomOf="@+id/fragment_home_upgrade_title">

                <ImageView
                    android:id="@+id/fragment_home_upgrade1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@null"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/fragment_home_upgrade1_title"
                    style="@style/fragment_home_upgrade_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="茶品升级" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/fragment_home_upgrade_card2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                app:cardElevation="@null"
                app:contentPadding="2dp"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintLeft_toRightOf="@+id/fragment_home_guideline_1_3"
                app:layout_constraintRight_toLeftOf="@+id/fragment_home_guideline_2_3"
                app:layout_constraintTop_toBottomOf="@+id/fragment_home_upgrade_title">

                <ImageView
                    android:id="@+id/fragment_home_upgrade2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@null"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/fragment_home_upgrade2_title"
                    style="@style/fragment_home_upgrade_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="红酒升级" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/fragment_home_upgrade_card3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                app:cardElevation="@null"
                app:contentPadding="2dp"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintLeft_toRightOf="@+id/fragment_home_guideline_2_3"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fragment_home_upgrade_title">

                <ImageView
                    android:id="@+id/fragment_home_upgrade3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@null"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/fragment_home_upgrade3_title"
                    style="@style/fragment_home_upgrade_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="精品升级" />
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.RecyclerView
                android:id="@+id/fragment_home_recyclerView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/fragment_content_bg"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fragment_home_upgrade_card1" />
        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
