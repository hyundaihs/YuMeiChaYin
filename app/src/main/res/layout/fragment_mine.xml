<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/fragment_mine_toolbar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="?attr/colorPrimary"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/fragment_mine_toolbar_title"
            style="@style/app_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/title_mine" />
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_mine_toolbar">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/fragment_mine_image_bg"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:contentDescription="@null"
                android:scaleType="fitXY"
                android:src="@mipmap/test_1"
                app:layout_constraintDimensionRatio="3:1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

            <ImageView
                android:id="@+id/fragment_mine_image_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@null"
                android:src="@mipmap/ic_launcher"
                app:layout_constraintBottom_toBottomOf="@+id/fragment_mine_image_bg"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintLeft_toLeftOf="@+id/fragment_mine_image_bg" />


            <TextView
                android:id="@+id/fragment_mine_image_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/fragment_upgrade_text_bg"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:text="账户余额：￥9527\n账户金币：7259"
                app:layout_constraintBottom_toBottomOf="@+id/fragment_mine_image_bg"
                app:layout_constraintRight_toRightOf="@+id/fragment_mine_image_bg" />

            <Button
                android:id="@+id/fragment_mine_recharge"
                style="@style/fragment_mine_setting_item_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/setting_recharge"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fragment_mine_image_bg" />

            <View
                android:id="@+id/fragment_mine_line1"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/fragment_content_bg"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fragment_mine_recharge" />

            <Button
                android:id="@+id/fragment_mine_cash"
                style="@style/fragment_mine_setting_item_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/setting_cash"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fragment_mine_line1" />

            <View
                android:id="@+id/fragment_mine_line2"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/fragment_content_bg"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fragment_mine_cash" />

            <Button
                android:id="@+id/fragment_mine_gold_coin"
                style="@style/fragment_mine_setting_item_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/setting_gold_coin"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fragment_mine_line2" />

            <View
                android:id="@+id/fragment_mine_line3"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/fragment_content_bg"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fragment_mine_gold_coin" />

            <Button
                android:id="@+id/fragment_mine_upgrade_orders"
                style="@style/fragment_mine_setting_item_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/setting_upgrade_orders"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fragment_mine_line3" />

            <View
                android:id="@+id/fragment_mine_line4"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/fragment_content_bg"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fragment_mine_upgrade_orders" />

            <Button
                android:id="@+id/fragment_mine_orders"
                style="@style/fragment_mine_setting_item_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/setting_orders"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fragment_mine_line4" />

            <View
                android:id="@+id/fragment_mine_line5"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/fragment_content_bg"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fragment_mine_orders" />

            <Button
                android:id="@+id/fragment_mine_alert_pwd"
                style="@style/fragment_mine_setting_item_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/setting_alert_pwd"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fragment_mine_line5" />

            <View
                android:id="@+id/fragment_mine_line6"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/fragment_content_bg"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fragment_mine_alert_pwd" />

            <Button
                android:id="@+id/fragment_mine_voucher"
                style="@style/fragment_mine_setting_item_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/setting_voucher"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fragment_mine_line6" />

            <View
                android:id="@+id/fragment_mine_line7"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/fragment_content_bg"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fragment_mine_voucher" />
        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>